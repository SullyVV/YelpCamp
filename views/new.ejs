    <div class="row">
        <h1 style="text-align: center; margin: 25px auto">Create new Campground!</h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="img" placeholder="url"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="desc" placeholder="description"></input>
                </div>
                <div class="form-group">
                    <!--<input type="submit">submit</input>-->
                    <button type="submit" class="form-control btn btn-primary btn-block">submit</button>
                </div>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
        
    </div>
</div>
