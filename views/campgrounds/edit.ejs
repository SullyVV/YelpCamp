<% include ../partials/header.ejs %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center; margin: 25px auto">Edit on <%= campground.name%>!</h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds/<%= campground._id%>?_method=put" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value=<%= campground.name%>></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="img" value=<%= campground.img%>></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="desc" value=<%= campground.desc%>></input>
                </div>
                <div class="form-group">
                    <!--<input type="submit">submit</input>-->
                    <button type="submit" class="form-control btn btn-primary btn-block">submit</button>
                </div>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
        
    </div>
</div>
<% include ../partials/footer.ejs %>