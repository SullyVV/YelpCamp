<% include ../partials/header.ejs %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center; margin: 25px auto">Create new comment on <%= campground.name%></h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds/<%= campground._id%>/comments/" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author"></input>
                </div>
                <div class="form-group">
                    <!--<input type="submit">submit</input>-->
                    <button type="submit" class="form-control btn btn-primary btn-block">submit</button>
                </div>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
        
    </div>
</div>
<% include ../partials/footer.ejs %>